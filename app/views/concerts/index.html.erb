<p id="notice"><%= notice %></p>

<h1>Concerts</h1>

<table class='table'>
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Crowd</th>  
      <th>Group</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.name %></td>
        <td><%= concert.date %></td>
        <td><%= concert.crowd %></td>
        <td><%= concert.group %></td>
        <td><%= concert.duration %></td>
        <td><%= link_to 'Show', concert, class: "btn btn-danger text-light btn-sm" %></td>
        <td><%= link_to 'Edit', edit_concert_path(concert), class: "btn btn-danger text-light btn-sm" %></td>
        <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-light btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Concert', new_concert_path, class: "btn btn-danger text-light btn-sm" %>
